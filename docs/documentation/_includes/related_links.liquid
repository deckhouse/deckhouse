{%- if page.extracted_links and page.extracted_links.size > 0 %}
  {%- assign extracted_links = page.extracted_links %}
{%-  else %}
  {%- assign extracted_links = "" | split: "" %}
{%- endif %}

{%- if page.related_links and page.related_links.size > 0 %}
  {%- assign related_links = page.related_links %}
{%-  else %}
  {%- assign related_links = "" | split: "" %}
{%- endif %}

{%- assign all_related_links = related_links | concat: extracted_links %}
{%- if all_related_links and all_related_links.size > 0 %}
   {%- alert level="info" %}
{{ site.data.i18n.common['related_reference_and_documentation_links'][page.lang] }}:
  {%- for link in all_related_links %}
- [{{ link.title }}]({{ link.url }})
  {%- endfor %}
  {%- endalert %}
{%- endif %}
