<script type="text/javascript" >
{%- if site.urls.size > 0 %}
  {%- assign siteUrls = "" %}
  {%- for url in site.urls %}
    {%- if siteUrls.size > 0 %}
      {%- assign siteUrls = siteUrls | append: ", " %}
    {%- endif %}
    {%- assign siteUrls = siteUrls | append: "'" | append: (url[1] | remove_first: "https://" )|  append: "'" %}
  {%- endfor %}
{%- endif %}
</script>

<!-- Yandex.Metrika counter -->
