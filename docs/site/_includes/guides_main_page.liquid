<ul>
  {%- for guide in site.data.guides %}
    <li>
      <a href="{{ guide.link }}"><span class="name">{{ guide.name[page.lang] }}</span></a><br />
      <span>{{ guide.description[page.lang] }}</span> <strong>[{%for tag in guide.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}]</strong>
    </li>
  {% endfor %}
</ul>
