---
layout: none
searchable: false
sitemap_include: false
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">

    {%- assign pages=site.pages | where: "sitemap_include", true %}
    {%- for page in pages %}
    {%- assign page_canonical_url = page.url | regex_replace_once: '^\/?(en\/|ru\/)', '' | relative_url %}
    <url>
        <loc>{{ site.urls[page.lang] }}{{ page_canonical_url }}</loc>
        <xhtml:link rel="alternate" hreflang="ru" href="{{ site.urls['ru'] }}{{ page_canonical_url }}" />
        <xhtml:link rel="alternate" hreflang="en" href="{{ site.urls['en'] }}{{ page_canonical_url }}" />
        <lastmod>{{site.time | date: '%Y-%m-%d' }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>0.5</priority>
    </url>
    {%- endfor %}
</urlset>
