+	fmt.Printf("DEBUG getCepAddressPair %v, %p, %v\n", cep.Name, cep, cep.Status.Networking.Addressing)
+	for _, pair := range cep.Status.Networking.Addressing {
+		if pair.IPV4 == "" {
