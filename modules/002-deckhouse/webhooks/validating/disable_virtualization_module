# TODO: You should remove this hook as soon as the internal virtualization module is removed from deckhouse.

source /shell_lib.sh

function __config__(){
  cat <<EOF
configVersion: v1
kubernetesValidating:
- name: disable-virtualization-module.deckhouse.io
  group: main
  rules:
  - apiGroups:   ["deckhouse.io"]
    apiVersions: ["*"]
    operations:  ["CREATE", "UPDATE"]
    resources:   ["moduleconfigs"]
    scope:       "Cluster"
EOF
}

function __main__() {
  mcName=$(context::jq -r '.review.request.object.metadata.name')
  if [[ "$mcName" == "virtualization" ]]; then
    virtualizationModuleEnabled="$(context::jq -r '.review.request.object.spec.enabled')"
    if [[ "$virtualizationModuleEnabled" == "true" ]]; then
      cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":"moduleconfigs.deckhouse.io \"virtualization\" is temporary deprecated, a new version will be published soon." }
EOF
    return 0
    fi
  fi
  cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":true}
EOF
}

hook::run "$@"
