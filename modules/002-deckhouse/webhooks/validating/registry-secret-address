source /shell_lib.sh

function __config__(){
  cat <<EOF
configVersion: v1
kubernetesValidating:
- name: registry-secret-address.deckhouse.io
  group: main
  namespace:
    labelSelector:
      matchLabels:
        kubernetes.io/metadata.name: d8-system
  labelSelector:
    matchLabels:
      name: deckhouse-registry
  rules:
  - apiGroups:   [""]
    apiVersions: ["v1"]
    operations:  ["CREATE", "UPDATE"]
    resources:   ["secrets"]
    scope:       "Namespaced"
EOF
}

function __main__() {
  secretName=$(context::jq -r '.review.request.object.metadata.name')
  secretNs=$(context::jq -r '.review.request.object.metadata.namespace')

  if [[ "$secretName" == "deckhouse-registry" && "$secretNs" == "d8-system" ]]; then
    address=$(context::jq -r '.review.request.object.data.address')
    path=$(context::jq -r '.review.request.object.data.path')
    dockercfg=$(context::jq -r '.review.request.object.data[".dockerconfigjson"]')

    for fieldName in address path .dockerconfigjson; do
      value=$(context::jq -r ".review.request.object.data[\"$fieldName\"]")
      if [[ -z "$value" || "$value" == "null" ]]; then
        cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":"Field '$fieldName' is required in deckhouse-registry secret."}
EOF
        return 0
      fi
    done

    for fieldName in address path; do
      value_b64=$(context::jq -r ".review.request.object.data[\"$fieldName\"]")
      value_decoded=$(echo "$value_b64" | base64 --decode 2>/dev/null || true)
      if [[ "$value_decoded" =~ [[:space:]] ]] || \
         echo "$value_b64" | base64 --decode | tail -c1 | grep -q '^$'; then
        cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":"Field '$fieldName' contains spaces or newlines."}
EOF
        return 0
      fi
    done

    decoded=$(echo "$dockercfg" | base64 --decode 2>/dev/null || true)
    if [[ -z "$decoded" ]]; then
      cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":".dockerconfigjson is not valid base64 or empty."}
EOF
      return 0
    fi

    mapfile -t registries < <(echo "$decoded" | jq -r '.auths | keys[]')
    for registry in "${registries[@]}"; do
      if [[ "$registry" =~ [[:space:]] ]]; then
        cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":"Registry key '$registry' contains spaces or newlines."}
EOF
        return 0
      fi

      auth_value=$(echo "$decoded" | jq -r ".auths[\"$registry\"].auth")
      decoded_auth=$(echo "$auth_value" | base64 --decode 2>/dev/null || true)

      if [[ -z "$decoded_auth" || "$decoded_auth" =~ [[:space:]] ]] || \
         echo "$auth_value" | base64 --decode | tail -c1 | grep -q '^$'; then
        cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":false, "message":"Credentials for registry '$registry' contains spaces, tabs, or newlines or is empty."}
EOF
        return 0
      fi
    done
  fi

  cat <<EOF > "$VALIDATING_RESPONSE_PATH"
{"allowed":true}
EOF
}

hook::run "$@"
