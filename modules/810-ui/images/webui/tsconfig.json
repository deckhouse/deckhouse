{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",

    "baseUrl": "src/",
    "outDir": "dist",
    "paths": {
      "@grafana/ui": ["./modules/@grafana/ui/"],
      "@grafana/data": ["./modules/@grafana/data/"],
      "rc-time-picker": ["./modules/rc-time-picker"],
      "app": ["app/"]
      //"sass": ["sass/"]
    },
    "rootDirs": ["src/"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "allowJs": true
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*.ts*"]
}
