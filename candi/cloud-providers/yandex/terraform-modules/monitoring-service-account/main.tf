resource "yandex_iam_service_account" "monitoring_sa" {
  count = var.apiKey == "Auto" ? 1 : 0

  folder_id   = var.folderID
  name        = join("-", [var.prefix, "monitoring"])
  description = "Auto-generated by Deckhouse for cloud metrics exporter"
}

resource "yandex_resourcemanager_folder_iam_binding" "monitoring_sa" {
  count = var.apiKey == "Auto" ? 1 : 0

  folder_id   = var.folderID
  role        = "monitoring.viewer"
  members     = [
    join(":", ["serviceAccount", yandex_iam_service_account.monitoring_sa[0].id])
  ]
}

resource "yandex_iam_service_account_api_key" "monitoring_sa" {
  count = var.apiKey == "Auto" ? 1 : 0

  service_account_id = yandex_iam_service_account.monitoring_sa[0].id
  description        = "Auto-generated by Deckhouse for cloud metrics exporter"
}
