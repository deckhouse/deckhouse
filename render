final: false
fromImage: common/src-artifact
git:
- add: /modules/030-cloud-provider-azure/images/cloud-data-discoverer/src
  to:  /src
  excludePaths:
    - "**/*.md"
    - "**/*.yaml"
  stageDependencies:
    install:
      - go.mod
      - go.sum
      - "**/*.go"
- add: /go_lib/cloud-data
  to: /src/go_lib/cloud-data
  excludePaths:
    - "**/*.md"
    - "**/*.yaml"
  stageDependencies:
    install:
      - go.mod
      - go.sum
      - "**/*.go"
- add: /pkg/log
  to: /src/pkg/log
  excludePaths:
    - "**/*.md"
    - "**/*.yaml"
  stageDependencies:
    install:
      - go.mod
      - go.sum
      - "**/*.go"
shell:
  install:
  - cd /src
  - sed -i -e 's# /deckhouse/go_lib/cloud-data# /src/go_lib/cloud-data#g' go.mod
  - sed -i -e 's# /deckhouse/pkg/log# /src/pkg/log#g' go.mod
