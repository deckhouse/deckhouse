  - growpart
  - install
  - uninstall
  before: setup
- image: registrypackages/growpart-artifact-fdisk-0-33
  add: /
  to: /
  includePaths:
  - fdisk
  - sfdisk
  before: setup
imageSpec:
  config:
    labels: { "distro": "all", "version": "all", "growpart": "0.33" }
    clearUser: true
    clearWorkingDir: true
    clearCmd: true
