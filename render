  - |
    cat <<EOF > .kube-version
    KUBE_GIT_VERSION='v1.28.15'
    KUBE_GIT_MAJOR='1'
    KUBE_GIT_MINOR='28'
    KUBE_GIT_COMMIT='0000000000000000000000000000000000000000'
