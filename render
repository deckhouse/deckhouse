  - cd /src/v3.10.0
  - git apply /patches/v3.10.0/*.patch --verbose
  - rm -rf .git
  - git clone --depth 1 --branch v3.14.1 https://github.com/vmware/terraform-provider-vcd.git /src/v3.14.1
  - cd /src/v3.14.1
  - git apply /patches/v3.14.1/*.patch --verbose
  - rm -rf .git
