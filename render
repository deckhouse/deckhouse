- add: /modules/021-cni-cilium/images/bin-cni-plugins/patches
  to: /patches
  stageDependencies:
    install:
    - '**/*'
shell:
  install:
  - git clone --depth 1 --branch v1.5.0 https://github.com/containernetworking/plugins.git /src/plugins
