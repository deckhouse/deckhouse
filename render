  install:
  - cd /src
  - export GOPROXY=https://proxy.golang.org/
  - go mod download
  setup:
  - cd /src
  - GOOS=linux GOARCH=amd64 CGO_ENABLED=0 go build -ldflags="-s -w" -o /discoverer
